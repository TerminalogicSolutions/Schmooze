<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGrapeFruit">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorGrapeFruit"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@drawable/puroman"
                    android:textAlignment="center"
                    android:text=""
                    android:textSize="24sp"
                    android:gravity="bottom"
                    android:textColor="@color/colorWhite"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/llScheduler"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/clocks"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:tint="@color/colorWhite"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:layout_marginTop="30dp"
                            android:background="@color/colorWhiteDark"
                            android:text="Scheduler"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:textColor="@color/colorGrapeFruit"
                            />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <LinearLayout
                        android:id="@+id/llParties"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:background="@drawable/martini"
                            android:tint="@color/colorWhite"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:layout_marginTop="30dp"
                            android:background="@color/colorWhiteDark"
                            android:text="Parties"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:textColor="@color/colorGrapeFruit"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llTemplates"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/heart"
                            android:layout_gravity="center"
                            android:tint="@color/colorWhiteDark"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:layout_marginTop="30dp"
                            android:background="@color/colorWhiteDark"
                            android:text="Templates"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:textColor="@color/colorGrapeFruit"
                            />

                    </LinearLayout>
                </LinearLayout>


                <!-- Second Row-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <LinearLayout
                        android:id="@+id/llContacts"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:background="@drawable/star"
                            android:tint="@color/colorWhite"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:layout_marginTop="30dp"
                            android:background="@color/colorWhiteDark"
                            android:text="Contacts"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:textColor="@color/colorGrapeFruit"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llSettings"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/house"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:tint="@color/colorWhite"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:layout_marginTop="30dp"
                            android:background="@color/colorWhiteDark"
                            android:text="Settings"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:textColor="@color/colorGrapeFruit"
                            />

                    </LinearLayout>

                </LinearLayout>
                <!-- End Third Row-->

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>